@model IEnumerable<Blogger.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create","Category")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Category Name")
        </th>
       
       
       
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
       
            
            <td>
                @Html.ActionLink("Edit", "Edit","Category", new { @id=item.CategoryId }) |
               
                @Html.ActionLink("Delete", "Delete", new { id=item.CategoryId })
            </td>
        </tr>
    }

</table>
